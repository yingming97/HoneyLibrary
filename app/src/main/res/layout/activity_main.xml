<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Main.MainActivity">

    <pham.hien.honeylibrary.View.Tab.Home.HomeView
        android:id="@+id/layout_tab_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <pham.hien.honeylibrary.View.Tab.Sach.SachView
        android:id="@+id/layout_tab_sach"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <pham.hien.honeylibrary.View.Tab.PhieuMuon.PhieuMuonView
        android:id="@+id/layout_tab_phieu_muon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <pham.hien.honeylibrary.View.Tab.TheLoai.TheLoaiView
        android:id="@+id/layout_tab_hoa_don"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <pham.hien.honeylibrary.View.Tab.Option.OptionView
        android:id="@+id/layout_tab_option"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <pham.hien.honeylibrary.View.Menu.MenuBottomView
        android:id="@+id/layoutMenuBottomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>