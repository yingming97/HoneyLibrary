<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_94sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_78sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/img_background_bottom_menu"
        android:orientation="vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2.1" />

        <LinearLayout
            android:id="@+id/layout_bottom_navigation_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.8"
            android:background="@drawable/bg_linear_conner_top_12"
            android:elevation="@dimen/_2sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_menu_the_loai"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imv_bottom_navigation_hoa_don"
                    android:layout_width="@dimen/_21sdp"
                    android:layout_height="@dimen/_21sdp"
                    android:src="@drawable/ic_menu_book_category" />

                <TextView
                    android:id="@+id/tv_bottom_navigation_hoa_don"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Thể loại"
                    android:textColor="@color/color_text_menu"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_menu_sach"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imv_bottom_navigation_sach"
                    android:layout_width="@dimen/_21sdp"
                    android:layout_height="@dimen/_21sdp"
                    android:src="@drawable/ic_menu_book" />

                <TextView
                    android:id="@+id/tv_bottom_navigation_sach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Sách"
                    android:textColor="@color/color_text_menu"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4" />

            <LinearLayout
                android:id="@+id/layout_menu_phieu_muon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imv_bottom_navigation_phieu"
                    android:layout_width="@dimen/_21sdp"
                    android:layout_height="@dimen/_21sdp"
                    android:src="@drawable/ic_menu_phieu_muon" />

                <TextView
                    android:id="@+id/tv_bottom_navigation_phieu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Phiếu mượn"
                    android:textColor="@color/color_text_menu"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_menu_options"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imv_bottom_navigation_options"
                    android:layout_width="@dimen/_21sdp"
                    android:layout_height="@dimen/_21sdp"
                    android:src="@drawable/ic_menu_options" />

                <TextView
                    android:id="@+id/txv_bottom_navigation_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tùy chọn"
                    android:textColor="@color/color_text_menu"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imv_bottom_navigation_home"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_13sdp"
        android:background="@drawable/ic_circle_bdb6ff"
        android:elevation="@dimen/_2sdp"
        android:padding="@dimen/_16sdp"
        android:src="@drawable/ic_menu_home" />

</RelativeLayout>