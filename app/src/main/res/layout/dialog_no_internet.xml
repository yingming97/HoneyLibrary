<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="@dimen/_34sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_12sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/img_bg_no_internet" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingBottom="@dimen/_26sdp">

            <ImageView
                android:layout_width="@dimen/_126sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_24sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/img_dialog_title_no_internet" />

            <TextView
                android:id="@+id/txv_dialog_no_internet__title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_26sdp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Không cố Internet"
                android:textColor="#2D3142"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txv_dialog_no_internet__description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:text="Bật kết nối wifi hoặc 4G"
                android:textColor="#B4B7CC"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/tv_ok_dialog_no_internet"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_42sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/bg_btn_pink_rd_8"
                android:gravity="center"
                android:paddingStart="@dimen/_42sdp"
                android:paddingEnd="@dimen/_42sdp"
                android:text="OK"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>