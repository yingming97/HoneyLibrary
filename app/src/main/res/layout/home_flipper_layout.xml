<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/_5sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/img_vp2"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="match_parent"
                android:src="@drawable/img_sach_demo" />

            <TextView
                android:id="@+id/tv_ten_sach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_toEndOf="@+id/img_vp2"
                android:fontFamily="@font/roboto"
                android:lines="1"
                android:text="Đắc nhân tâm"
                android:textColor="@color/color_7896EE"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tv_gioi_thieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_ten_sach"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_toEndOf="@id/img_vp2"
                android:textColor="@color/text_color_5F5C7F"
                android:lines="4"
                android:textSize="@dimen/_10sdp"
                android:maxLines="4" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>