<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/layout_item_doc_gia"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_home_view"
    android:paddingHorizontal="@dimen/_14sdp"
    android:paddingVertical="@dimen/_6sdp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imv_avatar"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:elevation="1dp"
        android:src="@drawable/ic_user_photo_default"
        app:civ_border_color="#BCF2FA"
        app:civ_border_width="@dimen/_2sdp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_toEndOf="@+id/imv_avatar"
        android:fontFamily="@font/roboto_medium"
        android:text="Phạm Văn Hiển"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/tv_sdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_toEndOf="@+id/imv_avatar"
        android:fontFamily="@font/roboto"
        android:text="0123456789"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_10sdp" />
</RelativeLayout>