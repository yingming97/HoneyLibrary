<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background_them_nhanvien"
    >

    <RelativeLayout
        android:id="@+id/layout_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentTop="true"
        android:background="@color/blue_b0efef"
        android:elevation="@dimen/_2sdp">

        <RelativeLayout
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imv_close"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:rotation="180"
                android:src="@drawable/ic_arrow_right" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="-1dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="Nhân Viên 1 "
                android:textColor="@color/text_color_1c4942"
                android:textSize="@dimen/_16sdp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_tro_giup_Nhanvien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_260sdp"
                android:paddingTop="@dimen/_5sdp"
                android:src="@drawable/ic_avatar_default" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_alignParentBottom="true"
                android:background="#ccc" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:padding="@dimen/_10sdp"
        android:weightSum="2">


        <EditText
            android:id="@+id/tv_"
            android:layout_width="359dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_weight="1"
            android:background="@drawable/bg_ed_white_rd_9"
            android:text="Nhập tin nhắn..."
            android:textColor="@color/black"

            />

        <ImageView
            android:id="@+id/imv_send"
            android:layout_width="70dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_right"
            />


    </LinearLayout>

</RelativeLayout>