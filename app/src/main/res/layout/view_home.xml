<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_view"
    android:clickable="true"
    android:focusable="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layout_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_26sdp">

                <ImageView
                    android:id="@+id/imv_sun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:src="@drawable/ic_sun_home" />

                <TextView
                    android:id="@+id/tv_time_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imv_sun"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@+id/imv_sun"
                    android:fontFamily="@font/roboto_medium"
                    android:includeFontPadding="false"
                    android:text="TH3 11 OCT"
                    android:textColor="@color/text_color_1c4942" />

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/tv_time_today"
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Hi, Admin"
                    android:textColor="@color/text_color_1c4942"
                    android:textSize="@dimen/_16sdp" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_top_sach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_header"
                android:layout_marginVertical="@dimen/_28sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:text="Top sách được mượn nhiều nhất"
                android:textColor="@color/text_color_1c4942"
                android:textSize="@dimen/_16sdp" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/lv_sach_muon_nhieu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:layout_below="@+id/tv_top_sach" />


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>