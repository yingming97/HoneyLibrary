<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="FullScreen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">


        <item name="android:windowActionBarOverlay">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
    </style>

    <style name="full_screen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">


        <item name="android:windowActionBarOverlay">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:windowFullscreen">true</item>-->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
    </style>

    <style name="TitleCollapsed">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">#2D3142</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingStart">0dp</item>
    </style>

    <style name="TitleExpanded">
        <item name="android:textSize">@dimen/_19sdp</item>
        <item name="android:paddingStart">@dimen/_24sdp</item>
        <item name="android:textColor">#2D3142</item>
    </style>

    <style name="TitleCollapsedCreatePlan">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">#2D3142</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingStart">@dimen/_54sdp</item>
    </style>

    <style name="TitleExpandedCreatePlan">
        <item name="android:textSize">@dimen/_19sdp</item>
        <item name="android:paddingStart">@dimen/_22sdp</item>
        <item name="android:textColor">#2D3142</item>
    </style>


    <style name="PauseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="RobotoRegular">
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="RobotoMedium">
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="RobotoBold">
        <item name="fontFamily">@font/roboto</item>
    </style>
</resources>